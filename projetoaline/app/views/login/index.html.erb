<div class="login">
	<%= form_tag(action:'login', method:'post') do %>
        
        <input class="inp-login" placeholder="Matrícula..." name="usuario" required>      
        <input class="inp-login" type="password" name="senha" placeholder="Senha..." required>
        <input type="image" src="seta-login.png"></input>

	<% end %>   
</div>

<div class="container">

